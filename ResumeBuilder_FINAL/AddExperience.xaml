<Window x:Class="ResumeBuilder_FINAL.AddExperience"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ResumeBuilder_FINAL"
        mc:Ignorable="d"
        Title="AddExperience" Height="450" Width="400">


    <StackPanel Margin="10">
        <Label Content="Add Professional Experience" Style="{StaticResource WindowTitleLabel}"/>
        <StackPanel Orientation="Horizontal" Margin="0,5">
            <Label>Company Name:</Label>
            <TextBox x:Name="CompanyNameTextBox"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,5">
            <Label>Position:</Label>
            <TextBox x:Name="PositionTextBox"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,5">
            <Label>First Day:</Label>
            <TextBox x:Name="FirstDayTextBox"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,5">
            <Label>Last Day:</Label>
            <TextBox x:Name="LastDayTextBox"/>
        </StackPanel>
        <Button x:Name="btnAddExperience" Click="btnAddExperience_Click" Content="Add"
            Width="75" Margin="20" HorizontalAlignment="Center"/>
    </StackPanel>
    
</Window>
